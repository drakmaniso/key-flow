{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "elm make",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "elm",
            "args": [
                "make",
                "--output=docs/main.js",
                "src/Main.elm"
            ],
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$elm-review"
            ]
        }
    ]
}